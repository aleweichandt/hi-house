<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
    	android:background="@drawable/background"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    tools:context="com.web.ones.hihouse.UserInfoFragment"
	    android:orientation="vertical"
	    android:gravity="center_horizontal" >
		
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="start"
	        android:orientation="horizontal" >

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="30dp"
	            android:layout_marginRight="30dp"
	            android:layout_marginTop="30dp"
	            android:text="@string/userinfo_name"
	            android:textColor="@color/verde_texto"
	            android:textSize="20sp"
	            android:textStyle="bold" />

	        <EditText
	            android:id="@+id/userinfo_name"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="20dp"
	            android:layout_marginRight="30dp"
	            android:layout_marginTop="30dp"
	            android:layout_weight="0.03"
	            android:background="#ffffff"
	            android:gravity="center"
	            android:inputType="text"
	            android:lines="1"
	            android:textSize="20sp" />
	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="start"
	        android:orientation="horizontal" >

	    	<TextView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft="30dp"
	    	    android:layout_marginRight="30dp"
	    	    android:text="@string/userinfo_mail"
	    	    android:textColor="@color/verde_texto"
	    	    android:textSize="20sp"
	    	    android:textStyle="bold" />

	    	<EditText
		       android:id="@+id/userinfo_mail"
		       android:gravity="center"
		       android:inputType="text"
		       android:lines="1"
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:textSize="20sp"
	    	    android:layout_marginRight = "30dp"
		       android:background="#ffffff"
		       android:layout_marginBottom="20dp" />
	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:gravity="start"
	        android:orientation="horizontal" >

	    	<TextView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:text="@string/userinfo_admin"
	    	    android:layout_marginLeft = "30dp"
	    	    android:layout_marginRight = "10dp"
	    	    android:textStyle="bold"
	    	    android:textColor="@color/verde_texto"
	    	    android:textSize="20sp" />

	    	<CheckBox
	    	    android:id="@+id/userinfo_admin"
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="wrap_content" />
	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="start"
	        android:orientation="horizontal" >

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="30dp"
	            android:layout_marginRight="63dp"
	            android:text="@string/userinfo_pwd"
	            android:textStyle="bold"
	            android:textColor="@color/verde_texto"
	            android:textSize="20sp" />

	        <EditText
	            android:id="@+id/userinfo_pwd"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="20dp"
	            android:layout_weight="0.25"
	            android:background="#ffffff"
	            android:gravity="center"
	             android:layout_marginRight = "30dp"
	            android:inputType="numberPassword"
	            android:lines="1"
	            android:textSize="20sp" />
	    </LinearLayout>

	    <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:gravity="start" >

	    	<TextView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft = "30dp"
	    	    android:layout_marginRight = "30dp"
	    	    android:text="@string/userinfo_pwd_confirm"
	    	    android:textStyle="bold"
	    	    android:textColor="@color/verde_texto"
	    	    android:textSize="20sp" />

	    	<EditText
		       android:id="@+id/userinfo_pwd_confirm"
		       android:gravity="center"
	    	    android:layout_marginRight = "30dp"
	    	    android:background="#ffffff"
		       android:inputType="numberPassword"
		       android:lines="1"
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:textSize="20sp"
		       android:layout_marginBottom="20dp" />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:gravity="start" >

	    	<TextView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft = "30dp"
	    	    android:layout_marginRight = "30dp"
	    	    android:text="@string/userinfo_profiles"
	    	    android:textStyle="bold"
	    	    android:textColor="@color/verde_texto"
	    	    android:textSize="20sp" />
	    </LinearLayout>

	    <Button
	        android:id="@+id/userinfo_profiles"
	        android:layout_width="244dp"
	        android:layout_height="wrap_content"
	        android:layout_margin="0dp"
	        android:layout_marginLeft="30dp"
	        android:layout_marginRight="30dp"
	        android:gravity="center"
	        android:onClick="onProfilesPressed"
	        android:text="@string/select"
	        android:textColor="@color/verde_texto"
	        android:textSize="20sp"
	        android:textStyle="bold" />

	    <Button
	        android:id="@+id/userinfo_edit"
	        android:layout_width="244dp"
	        android:layout_height="wrap_content"
	        android:layout_margin="0dp"
	        android:layout_marginLeft="90dp"
	        android:layout_marginRight="90dp"
	        android:gravity="center"
	        android:onClick="onEditPressed"
	        android:text="@string/edit"
	        android:textColor="@color/verde_texto"
	        android:textSize="20sp"
	        android:textStyle="bold" />

	    <Button
	        android:id="@+id/userinfo_delete"
	        android:layout_width="244dp"
	        android:layout_height="wrap_content"
	        android:layout_margin="0dp"
	        android:layout_marginLeft="90dp"
	        android:layout_marginRight="90dp"
	        android:gravity="center"
	        android:onClick="onDeletePressed"
	        android:text="@string/delete"
	        android:textColor="@color/verde_texto"
	        android:textSize="20sp"
	        android:textStyle="bold" />

	    <Button
		    android:id="@+id/userinfo_confirm"
		    android:layout_marginLeft = "90dp"
		    android:layout_width="244dp"
	    	    android:layout_marginRight = "90dp"
		    android:layout_height="wrap_content"
		    android:text="@string/confirm"
		    android:onClick="onConfirmEdition"
		    android:textSize="20sp"
		    android:textColor="@color/verde_texto"
		    android:textStyle="bold"
		    android:gravity="center"
		    android:layout_margin="0dp"
		    android:visibility="gone" />
	    <Button
		    android:id="@+id/userinfo_cancel"
		    android:layout_width="244dp"
		    android:layout_height="wrap_content"
		    android:text="@string/cancel"
		    android:onClick="onCancelEdition"
		    android:textSize="20sp"
		    android:layout_marginLeft = "90dp"
	    	    android:layout_marginRight = "90dp"
		    android:textColor="@color/verde_texto"
		    android:gravity="center"
		    android:textStyle="bold"
		    android:layout_margin="0dp"
		    android:visibility="gone" />
	</LinearLayout>
</ScrollView>