<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal" >
	
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:id="@+id/button_bar"
	    style="@style/border" >

		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="#696969"
		    android:orientation="vertical" >
		    
		    <Switch 
			    android:id="@+id/on_off_switch"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textOn="@string/on_switch"
			    android:textOff="@string/off_switch"
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:switchTextAppearance="@style/SwitchTextAppearance"
			    android:layout_marginLeft="10dp"/>
	
		    <ImageButton
		        android:id="@+id/open_close_button"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/ic_action_secure"
			    android:contentDescription="@string/open_close_btn_desc"
			    android:layout_centerHorizontal="true" />
		    
		    <ImageButton
		        android:id="@+id/start_stop_button"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/ic_action_play_over_video"
			    android:contentDescription="@string/start_stop_btn_desc"
			    android:layout_alignParentRight="true"
			    android:layout_marginRight="20dp" />
		    
		</RelativeLayout>
		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:background="#696969"
		    android:layout_height="wrap_content" >
		    <TextView 
		        android:layout_width="0dp"
		    	android:layout_height="wrap_content"
		    	android:layout_weight="2"
		    	android:layout_marginLeft="2dp"
		    	android:text="@string/temp"/>
			<SeekBar
		        android:id="@+id/seekBar"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:layout_width="0dp"
		        android:layout_weight="6"
		        android:background="#696969"
		        android:max="15" />
			<EditText 
			    android:layout_height="wrap_content"
			    android:layout_width="0dp"
			    android:layout_weight="2"
			    android:inputType="number"
			    android:id="@+id/temp_input"/>
		</LinearLayout>
	</LinearLayout>
	<ExpandableListView
		android:id="@+id/profiles_explist"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:layout_above="@id/button_bar"/>
</RelativeLayout>